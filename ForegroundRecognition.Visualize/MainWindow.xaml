<Window x:Class="ForegroundRecognition.Visualize.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForegroundRecognition.Visualize"
        mc:Ignorable="d"
       
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Canvas Grid.Column="0" Grid.Row="0"
         Name ="MainCanvas" Background="White" />
        <StackPanel Grid.Column="1" Grid.Row="0" Background="White">
            <Button Click="CheckForegroundClickAsync">CheckForegroundAsync</Button>
            <Button Click="CheckForegroundClick">CheckForeground</Button>
        </StackPanel>
    </Grid>

</Window>
